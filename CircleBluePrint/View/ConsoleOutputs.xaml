<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib"
        x:Class="SoloProjects.Dudhit.SpaceEngineers.SEBP.View.ConsoleOutputs" Title="SEBP command line " Height="600"
       Width="800" >
       <ScrollViewer>
        <StackPanel Background="Black">
            <ProgressBar Visibility="{Binding ProgressBarVisibility,  IsAsync=True,  NotifyOnSourceUpdated=True}"  Height="20" Margin="2"
                    Value="{Binding ProgressBarPercentComplete,  IsAsync=True,  NotifyOnSourceUpdated=True}"
                    IsIndeterminate="{Binding ProgressBarIsIndeterminate,  IsAsync=True,  NotifyOnSourceUpdated=True}" Foreground="Yellow"
                    BorderBrush="{x:Null}" Background="{x:Null}" />
            <ItemsControl ItemsSource="{Binding ControlCollection,  IsAsync=True,  NotifyOnSourceUpdated=True}"  />
        </StackPanel>
    </ScrollViewer>
</Window>