<UserControl x:Class="SoloProjects.Dudhit.SpaceEngineers.SEBP.View.TabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:prism="http://www.codeplex.com/prism"
        mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl x:Name="tabCtrl" DockPanel.Dock="top" TabIndex="1">
        <TabItem x:Name="shapeTab" Header="Shape Settings" TabIndex="150" >
            <ItemsControl x:Name="ShapeTab" prism:RegionManager.RegionName="ShapeTabRegion" ></ItemsControl>
        </TabItem>
        <TabItem x:Name="blockTab" Header="Block Settings" TabIndex="200" >
            <ItemsControl x:Name="ShapeTab2" prism:RegionManager.RegionName="BlockTabRegion"></ItemsControl>
        </TabItem>
        <TabItem x:Name="fileTab" Header="BluePrint Settings" TabIndex="50" >
            <ItemsControl x:Name="ShapeTab3" prism:RegionManager.RegionName="FileTabRegion"></ItemsControl>
        </TabItem>
       
    </TabControl>
</UserControl>
