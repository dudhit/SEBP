<Window x:Class="SoloProjects.Dudhit.SpaceEngineers.CircleBluePrint.ProgressStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressStatus" Height="60" Width="300" WindowStartupLocation="CenterScreen"
        MaxWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}"
         MinWidth="300" MaxHeight="60" MinHeight="60"
        x:Name="statusWindow"
        >
    <Grid>
        <ProgressBar x:Name="progressBar" MaxHeight="20" MinHeight="20"    MinWidth="300" MaxWidth="{Binding Width, ElementName=statusWindow}" Maximum="{Binding BarMaximum}" Minimum="{Binding BarMinimum}">
            
 </ProgressBar>
        <Label x:Name="updateLabel"></Label>
    </Grid>
</Window>
